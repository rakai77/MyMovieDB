<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgMoviePoster"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/this_is_image"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/shades3"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingVertical="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="6dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMoviePoster"
        app:layout_constraintTop_toTopOf="@+id/imgMoviePoster"
        tools:text="Movie name" />

    <TextView
        android:id="@+id/tvRatting"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@color/shades3"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:drawableEndCompat="@android:drawable/star_off"
        app:drawableTint="@color/yellow7"
        app:layout_constraintStart_toStartOf="@+id/tvMovieTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvMovieTitle"
        tools:text="9.2" />

    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/iconButton"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/imgMoviePoster"
        app:layout_constraintEnd_toEndOf="@+id/tvMovieTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>